@using T3DiarsClinica.Models.ModuloMedicos.Objetos

<h2 class="text-center"> Registro Medico </h2>
<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <form action="/Medico/GuardarMedico" method="post">

            <div class="form-group">
                <label>Nombre Medico</label>
                <input name="Nombre" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Apellido Paterno</label>
                <input name="ApellidoPaterno" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Apellido Materno</label>
                <input name="ApellidoMaterno" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Dni </label>
                <input name="Dni" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label>Fecha Nacimiento</label>
                <input name="FechaNacimiento" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Hora Trabajo al Dia</label>
                <br />
                <select name="HoraTrabajoDia" class="form-control">
                    <option value=""> ---Seleccione hora de trabajo--- </option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>

                </select>
                @Html.ValidationMessage("Raza")

            </div>

            <div class="form-group">
                <label>Especialidad</label>
                <select name="especialidadIDS" class="form-control">
                    @foreach (var car in ViewBag.especialidades)
                    {
                        <option value="@car.Id">
                            @car.Nombre
                        </option>
                    }

                </select>
               
            </div>
         
            <button class="btn btn-primary"> Guardar</button>

        </form>
    </div>
</div>