@using T3DiarsClinica.Models.ModuloMedicos.Objetos;
@model List<Especialidad>

<h2 class="text-center"> Lista de Especialidades </h2>

<a href="/Medico/CrearEspecialidad" class="btn btn-primary pull-right "> Registrar Especialidad</a>
>
<br />
<br />
<table class="table table-condensed" style="margin-left: 15%">
    <thead>
        <tr>
            <th> Id </th>
            <th> Nombre  </th>
            <th> Opciones </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id</td>
                <td> @item.Nombre</td>
                
                <td>
                    <a href="/Medico/EliminarEspecialidad?eliminaespecialidad=@item.Id"> Eliminar </a>
                    <a href="/Medico/EditarEspecialidad?Idsespecialidad=@item.Id"> Editar </a>
                </td>
            </tr>

        }
    </tbody>
</table>
